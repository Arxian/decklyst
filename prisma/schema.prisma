generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Deckinfo {
  id            Int    @id @default(autoincrement())
  sharecode     String @unique
  deckcode      String @unique
  faction       String @default("neutral")
  minionCount   Int    @default(0)
  spellCount    Int    @default(0)
  artifactCount Int    @default(0)
  totalCount    Int    @default(0)

  createdAt DateTime @default(now())

  views Deckviews[]

  @@map("deckinfo")
}

model Deckimage {
  id              Int       @id @default(autoincrement())
  deckcode        String    @unique
  version         String?
  bytes           Bytes?
  renderStartedAt DateTime?
  renderedAt      DateTime?

  @@map("deckimage")
}

model Deckviews {
  deckcode  String
  ipAddress String
  viewCount Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  info Deckinfo @relation(fields: [deckcode], references: [deckcode])

  @@id([deckcode, ipAddress])
  @@map("deckviews")
}
