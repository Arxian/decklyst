generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Deckinfo {
  id        Int        @id @default(autoincrement())
  sharecode String     @unique
  deckcode  String     @unique
  createdAt DateTime   @default(now())

  @@map("deckinfo")
}

model Deckimage {
  id         Int       @id @default(autoincrement())
  deckcode   String    @unique
  version    String?
  bytes      Bytes?
  renderedAt DateTime?

  @@map("deckimage")
}

model Deckviews {
  deckcode  String
  ipAddress String
  viewCount Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@id([deckcode, ipAddress])
  @@map("deckviews")
}
